datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String
  password  String
  visits    Visit[]
  bookings  Booking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Visit {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  timestamp DateTime @default(now())
  location  String
}

model Class {
  id        String    @id @default(uuid())
  name      String
  time      String
  duration  String
  trainer   String
  totalSpots Int
  bookings  Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  userId    String
  classId   String
  user      User     @relation(fields: [userId], references: [id])
  class     Class    @relation(fields: [classId], references: [id])
  createdAt DateTime @default(now())
}
